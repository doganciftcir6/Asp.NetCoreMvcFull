@model SelectList

@{
    Layout = "~/views/shared/_layout.cshtml";
}

<div class="mt-3">
<form asp-action="SendMoney" method="post" class="w-75 mx-auto">
    <input type="hidden" name="SenderId" value="@ViewBag.SenderId"/>
    <div class="mb-3">
        <label>Göndereceğiniz Hesap Numarası:</label>
    <select class="form-select" asp-items="@Model" name="AccountId">
    </select>
    </div>
    <div class="mb-3">
        <label>Gönderceğiniz Tutar:</label>
        <input type="number" name="Amount" class="form-control" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Para Gönder</button>
    </div>
</form>
</div>
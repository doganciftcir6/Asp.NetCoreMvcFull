@model List<CategoryListResponseModel>

@{
    Layout = "_Layout";
}
<div class="container my-4  pt-4">
<a asp-action="Create" asp-controller="Category">Kategori Ekle</a>
<table class="table table-sm table-striped table-bordered">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Definition</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if(Model?.Count > 0)
        {
            foreach (var item in Model)
            {
                <tr>
                    <th>@item.Id</th>
                    <td>@item.Definition</td>
                    <td>
                        <a asp-action="Remove" asp-controller="Category" asp-route-id="@item.Id" class="btn btn-danger btn-sm">Sil</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="2">Hehangi bir data bulunamadı.</td>
            </tr>
        }
      
    </tbody>
</table>
</div>

@model List<Customer>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/style.css" rel="stylesheet" />

<div class="row">
    <div class="col-4">
        @await Component.InvokeAsync("News",new{@color="red"})
        @*<partial name="_NewsPartial" model="NewsContext.List">*@
    </div>
    <div class="col-8">
        <h3>Customer List</h3>
        <paragraph short-description="Yavuz"></paragraph>
        <a asp-action="Create" asp-controller="Home">Ekle</a>
        <table class="table table-hover table-bordered">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Age</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.FirstName</td>
                        <td>@item.LastName</td>
                        <td>@item.Age</td>
                        <td>
                            <a asp-action="Update" asp-controller="Home" asp-route-id="@item.Id">Güncelle</a>
                            <a asp-action="Remove" asp-controller="Home" asp-route-id="@item.Id">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>




